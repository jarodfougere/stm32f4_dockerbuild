{   
    "editor.tabCompletion": "on",
    "editor.wordWrap": "wordWrapColumn",
    "editor.detectIndentation": false,
    "extensions.ignoreRecommendations": false,
    "editor.autoClosingBrackets": "languageDefined",
    "window.zoomLevel": -1,
    // FILE SYSTEM
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "afterDelay",

    // BOOKMARKS
    "bookmarks.sideBar.expanded": true,
    //C and C++ LANGUAGE SETTINGS
    //https://code.visualstudio.com/docs/languages/cpp
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.enableConfigurationSquiggles": true,
    "C_Cpp.dimInactiveRegions": true,
    // LANGUAGES 
    "files.associations": {
        "*.c": "c",
        "*.h": "c",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.s": "asm",
        "*as": "asm",
        "*.asm": "asm",
        "*.js": "javascript",
        "*.py": "python",
        "*.md": "markdown",
        "*.sh": "shell",
        "*.bash": "bash",
        "*.bat": "bat",
        "*.ps": "powershell",
        "*.tcc": "c",
        "algorithm": "c",
        "random": "c",
        "functional": "c",
        "limits": "c",
        "type_traits": "c",
        "utility": "c",
        "array": "c",
        "tuple": "c",
        "typeinfo": "c",
        "streambuf": "c",
        "initializer_list": "c"
    },

    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.windows" : "C:/WINDOWS/System32/WindowsPowerShell/v1.0/powershell.exe",

    "iarvsc.cppStandard": "c++11",
    "iarvsc.cStandard": "c99",
    "iarvsc.compiler": "C:\\Program Files (x86)\\IAR Systems\\Embedded Workbench 8.4\\arm\\bin\\iccarm.exe",
    "iarvsc.workbench": "C:\\Program Files (x86)\\IAR Systems\\Embedded Workbench 8.4",
    "iarvsc.ewp": "c:\\Users\\cmatt\\Documents\\rimot-lowpower-sensorboard\\EWARM\\rimot-lowpower-sensorboard.ewp",
    "iarvsc.configuration": "Debug",

    "iarvsc.defines": [
        "__eeprom=",
        "__flash=",
        "__no_init=",
        "__root=",
        "volatile=volatile",
    ],

    //extension currently doesnt support this but adding for future provision
    "iarvsc.outFile": "iar-launch.out",
    "sourcetrail.startServerAtStartup": true,
}