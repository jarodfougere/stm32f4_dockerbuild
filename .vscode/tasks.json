{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "group": "build"
        },
        
        {
            "label": "CMake : configure",
            "type" : "shell",
            "presentation" :{
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}/",
            },
            "command": "cmake -S ${workspaceRoot} -B ${workspaceRoot}/Build -G 'MinGW Makefiles'",
        },

        {
            "label" : "CMake : build",
            "type"  : "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}/Build"
            },
            "command" : "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn" : [
                "CMake : configure"
            ]
        },

        {
            "label": "CMake : rebuild",
            "type": "shell",
            "promptOnClose": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceRoot}/Build",
            },
            "command" : "rm -r ./*; cmake -S ${workspaceRoot} -B ${workspaceRoot}/Build -G 'MinGW Makefiles'; make;",
        }
    ]
}