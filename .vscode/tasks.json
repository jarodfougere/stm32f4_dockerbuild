{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "iar",
            "command": "build",
            "project": "${config:iarvsc.ewp}",
            "config": "${config:iarvsc.configuration}",
            "builder": "${config:iarvsc.workbench}\\\\common\\\\bin\\\\IarBuild.exe",
            "label": "Iar Build",
            "problemMatcher": [
                "$iar-cc",
                "$iar-linker"
            ]
        },
        {
            "type": "iar",
            "command": "rebuild",
            "project": "${config:iarvsc.ewp}",
            "config": "${config:iarvsc.configuration}",
            "builder": "${config:iarvsc.workbench}\\\\common\\\\bin\\\\IarBuild.exe",
            "label": "Iar Rebuild",
            "problemMatcher": [
                "$iar-cc",
                "$iar-linker"
            ]
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}