{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        {
            "label": "IARprebuildCompile",
            "command": "gcc",
            "args": [
                "-o",
                "${workspaceRoot}/.vscode/IARprebuild.exe",
                "${workspaceRoot}/.vscode/IARprebuild.c"
            ],
            "problemMatcher": [],
            "type": "shell",
            "group": "none",
            "isBackground": true,
            "promptOnClose": false,
            "options": {"cwd": "${workspaceRoot}/.vscode"}
        },
        {
            "label": "IARprebuild",
            "command": "${workspaceRoot}/.vscode/IARprebuild.exe",
            "type": "shell",
            "group": "none",
            "isBackground": true,
            "dependsOn": [
                "IARprebuildCompile"
            ],
            "dependsOrder": "sequence",
            "promptOnClose": false,
            "problemMatcher": [],
            "options": {"cwd": "${workspaceRoot}/.vscode"}

        },
        {
            "type": "iar",
            "label": "Iar Build",
            "group": "build",
            "command": "build",
            "project": "${config:iarvsc.ewp}",
            "config": "${config:iarvsc.configuration}",
            "builder": "${config:iarvsc.workbench}\\\\common\\\\bin\\\\IarBuild.exe",
            "problemMatcher": [
                "$iar-cc",
                "$iar-linker"
            ],
            "promptOnClose": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "dependsOn": [
                "IARprebuild"
            ],
            "dependsOrder": "sequence",
            "options": {"cwd": "${workspaceRoot}/.vscode"}

        },
        {
            "type": "iar",
            "label": "Iar Rebuild",
            "group": "build",
            "command": "rebuild",
            "project": "${config:iarvsc.ewp}",
            "config": "${config:iarvsc.configuration}",
            "builder": "${config:iarvsc.workbench}\\\\common\\\\bin\\\\IarBuild.exe",
            "problemMatcher": [
                "$iar-cc",
                "$iar-linker"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "promptOnClose": false,
            "dependsOn": [
                "IARprebuild"
            ],
            "dependsOrder": "sequence",
            "options": {"cwd": "${workspaceRoot}/.vscode"}
        }
    ]
}