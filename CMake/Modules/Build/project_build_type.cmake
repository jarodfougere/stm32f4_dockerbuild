################################################################################
## THIS MODULE SETS THE OUTPUT DIRECTORY FOR THE COMPLETED BINARY
## 
## IF THE USER/PROJECT HAS NOT SPECIFIED A BUILD TYPE, 
## THE BINARY WILL BE PLACED INTO THE BUILD DIRECTORY 
## BUT NOT INTO A SPECIFIED >BUILD-TYPE< FOLDER
##
## AUTHOR:  CARL MATTATAL
## LICENSE: RIMOT.IO INCORPORATED
################################################################################
if(NOT DEFINED PROJECT_BUILD_TYPE_MODULE_INCLUDED)
set(PROJECT_BUILD_TYPE_MODULE_INCLUDED true)
if(DEFINED PROJECT_ROOT_DIR)
add_compile_definitions(${${CMAKE_BUILD_TYPE}})
if(${CMAKE_BUILD_TYPE} STREQUAL "RELEASE")
    message("build type is RELEASE")
    set(ARCHIVE_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Release)
    set(LIBRARY_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Release)
    set(RUNTIME_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Release)
    set(EXECUTABLE_OUTPUT_PATH    ${PROJECT_BIN_DIR}/Release)

elseif(${CMAKE_BUILD_TYPE} STREQUAL "DEBUG")
    message("build type is DEBUG")
    set(ARCHIVE_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Debug)
    set(LIBRARY_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Debug)
    set(RUNTIME_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR}/Debug)
    set(EXECUTABLE_OUTPUT_PATH    ${PROJECT_BIN_DIR}/Debug)
else()
message("USER HSA NOT PICKED A CMAKE VARIANT. CMAKE_BUILD_TYPE = ${CMAKE_BUILD_TYPE}")
    set(ARCHIVE_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR})
    set(LIBRARY_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR})
    set(RUNTIME_OUTPUT_DIRECTORY  ${PROJECT_BIN_DIR})
    set(EXECUTABLE_OUTPUT_PATH    ${PROJECT_BIN_DIR})
endif()
else()
message(FATAL_ERROR 
"THE PROJECT DOES NOT HAVE A CMAKE PIPELINE DEFINITION FOR 
>PROJECT_ROOT_DIR<")
endif()
endif()